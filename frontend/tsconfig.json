{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@common/*": [
        "common/*"
      ]
    },
    "baseUrl": "./src",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": false,
    "outDir": "../dist/frontend",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.css"
  ]
}